{% extends 'base.html.twig' %}

{% block title %}Connexion - SnowTriks {% endblock %}

{% block stylesheets %}
		<link rel="stylesheet" href="{{asset('css/login.css')}}">
{% endblock %}

{% block body %}
		<div id="corp" class="d-flex align-items-center">
			<div class="container ">
				{% for label, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert alert-{{label}} text-center" role="alert">
							{{ message }}
						</div>
					{% endfor %}
				{% endfor %}
				{% if error %}
					<div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
				<div class="d-flex justify-content-center">
					<div class=" col-lg-5 col-xs-10 col-md-9">
						<div class="card o-hidden border-0 shadow-lg my-5">
							<div class="card-body bg-dark text-white p-0 d-flex justify-content-center align-itels-center">
								<div class="col-lg-8">
									<div class="p-2">
									
										{% if app.user %}
											<div class="mb-3 text-center">
												Vous etes connecté avec le compte:
												{{ app.user.userIdentifier|capitalize }},
												<a href="{{ path('app_logout') }}">Déconnexion</a>
											</div>
										{% endif %}
										<div class="text-center">
											<h1 class="h2 text-gray-900 mb-4 mt-3">
												Se Connecter
											</h1>
										</div>
										<hr>
										<form method="post">
											<div class="form-group mb-3">
												<label for="inputUsername">Nom utilisateur</label>
												<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
											</div>
											<div class="form-group mb-3">
												<label for="inputPassword">Mot de passe
												</label>
												<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
											</div>
											<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

											<div class="d-flex justify-content-center mb-3 mt-2">
												<button type="submit" class=" btn btn btn-outline-light btn-user btn-block">
													Connexion
												</button>
											</div>
										</form>
										<hr>
										<div class="text-center">
											<a class="small text-white" href="{{path('app_reset_password')}}">Mot de passe oublié</a>
										</div>
										<div class="text-center">
											<a class="small text-white" href="{{path('app_register')}}">Vous n'avez pas de compte ? Créer mon compte!</a>
										</div>
										<div class="text-center mt-3 mb-3">
											<a class="small text-white" href="{{path('app_home')}}">Retour acceuil</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
